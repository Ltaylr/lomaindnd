<%- include('./include/head.ejs') %>
    <%- include('./include/nav.ejs') %>

        <main class= "h-[100%] flex flex-wrap justify-center">
       <div class="h-max w-max-300 border-3 bg-gray-800/30  border-gray-300 rounded-lg p-2 mt-6 mr-12 ml-12"> 
            <header class="text-center pt-4">
                <h1 class="font-semibold text-2xl md:text-4xl text-cyan-300 text-shadow-fuchsia-500 text-shadow-lg">
                    <%= campaign.title %>
                </h1>
            </header>
            <div class="pt-6 flex flex-wrap justify-center" >
                <img class=" w-[85%] md:w-[60%] rounded-lg" src="/images/<%= campaign.imageUrl %>" alt="<%= campaign.title %>">
                <% for(let image in campaign.imageCollection) { %>
                    <img class=" w-[85%] md:w-[60%] rounded-lg" src="/images/<%= image %>" alt="...">
                <% } %>    
                
            </div>
            <div class="flex flex-wrap justify-center pt-10 pb-10 border-t-3 border-gray-700 mt-10 " >
                <div class="w-[60%] border border-gray-500 bg-gray-800 rounded-lg p-3 ps-6">
                    <p class="text-lg text-cyan-500 font-medium">
                        <%= campaign.description %>
                    </p>
                </div>
            </div>
        </div>
    </main>
<%- include('./include/end.ejs') %>
