<%- include('./include/head.ejs') %>
    <%- include('./include/nav.ejs') %>

    <main class= "h-[100%] flex flex-wrap justify-center">
       <div class="h-[110%] md:h-[100%] w-[90%] md:w-[80%] lg:w-[50%] border-3 bg-gray-800/30  border-gray-300 rounded-lg p-2 md:mt-6 md:ms-12"> 
            <header class="text-center md:pt-4">
                <h1 class="font-semibold text-2xl md:text-4xl text-cyan-300 text-shadow-fuchsia-500 text-shadow-lg">
                    <%= campaign.title %>
                </h1>
            </header>
            <div class="flex flex-wrap justify-center pt-3 md:pt-10 pb-3 md:pb-10 border-t-3 border-gray-700 mt-3 md:mt-10" >
                <div class="md:w-[80%] border border-gray-500 bg-gray-800 rounded-lg p-3 ps-2 lg:ps-6">
                    <p class=" text-sm md:text-lg text-cyan-500 font-medium">
                        <%= campaign.description %>
                    </p>
                </div>
            </div>
            <div class="pt-3 columns-2 sm:columns-4 justify-center border-t-3 border-gray-700 md:mt-10 p-3" >
                    <div class="bg-gray-800 rounded-lg p-2 md:p-4 border border-gray-500">
                        <a class="h-auto max-w-full rounded-lg object-cover object-center" href="/campaign/gallery/<%= campaign._id %>">
                            <img class="w-full object-cover object-center rounded-lg" src="/images/archive.svg" alt="<%= campaign.title %>">
                            <div class="mt-1">
                                <p class="text-lg text-center text-shadow-lg text-cyan-300 text-shadow-fuchsia-500 font-medium ">
                                   Gallery
                                </p>
                            </div>
                        </a>
                    </div>
                     <div class="bg-gray-800 rounded-lg p-2 md:p-4 border border-gray-500 mt-3">
                        
                        <a class=" h-auto max-w-full rounded-lg object-cover object-center" href="/campaign/journals/<%= campaign._id %>">
                            <img class="w-full object-cover object-center rounded-lg" src="/images/spellbook.svg" alt="<%= campaign.title %>">
                            <div class="mt-1">
                                 <p class="text-lg text-center text-shadow-lg text-cyan-300 text-shadow-fuchsia-500 font-medium ">
                                   Journals
                                </p>
                            </div>
                        </a>
                    </div>
                     <div class="bg-gray-800 rounded-lg p-2 md:p-4 border border-gray-500 mt-3">
                        <a class=" h-auto max-w-full rounded-lg object-cover object-center" href="/campaign/locations/<%= campaign._id %>">
                            <img class="w-full object-cover object-center rounded-lg" src="/images/world.svg" alt="<%= campaign.title %>">
                            <div class="mt-1 border ">
                                <p class="text-lg text-center text-shadow-lg text-cyan-300 text-shadow-fuchsia-500 font-medium ">
                                   Locations
                                </p>
                            </div>
                        </a>
                    </div>
                     <div class="bg-gray-800 rounded-lg p-2 md:p-4 border border-gray-500 mt-3">
                        <a class=" h-auto max-w-full rounded-lg object-cover object-center" href="/campaign/sharacters/<%= campaign._id %>">
                            <img class="w-full object-cover object-center rounded-lg" src="/images/armor.svg" alt="<%= campaign.title %>">
                            <div class="mt-1">
                                <p class="text-lg text-center text-shadow-lg text-cyan-300 text-shadow-fuchsia-500 font-medium ">
                                   Characters
                                </p>
                            </div>
                        </a>
                    </div>
               
            </div>
        </div>
    </main>
<%- include('./include/end.ejs') %>
