<%- include('./include/head.ejs') %>
    <%- include('./include/nav.ejs') %>

        <main class= "h-[100%] flex flex-wrap justify-center">
       <div class="h-max md:w-[70%] border-3 bg-gray-800/30  border-gray-300 rounded-lg p-2 md:mt-6 mr-12 ml-12"> 
            <header class="text-center md:pt-4">
                <h1 class="font-semibold text-2xl md:text-4xl text-cyan-300 text-shadow-fuchsia-500 text-shadow-lg">
                    <%= campaign.title %>
                </h1>
            </header>
            <div class="flex flex-wrap justify-center pt-3 md:pt-10 pb-3 md:pb-10 border-t-3 border-gray-700 mt-3 md:mt-10 " >
                <div class="w-[60%] border border-gray-500 bg-gray-800 rounded-lg p-3 ps-6">
                    <p class=" text-sm md:text-lg text-cyan-500 font-medium">
                        <%= campaign.description %>
                    </p>
                </div>
            </div>
            <div class=" pt-3 md:pt-6 flex flex-wrap gap-4 justify-center border-t-3 border-gray-700 md:mt-10 " >
                <% if (campaign.imageUrl != 'd20Large.png') { %>
                    <div class="bg-gray-800 rounded-lg p-1 md:p-3 border border-gray-500 w-[20%] md:w-[25%]">
                        <a class="rounded-lg align-middle" href="/images/<%= campaign.imageUrl %>">
                            <img class="rounded-lg" src="/images/<%= campaign.imageUrl %>" alt="<%= campaign.title %>">
                        </a>
                    </div>
                <% } %>
                <% for(let image of campaign.imageCollection) { %>
                    <div class="bg-gray-800 align-middle rounded-lg p-1 md:p-3 border border-gray-500 w-[20%] md:w-[25%]">
                        <a class="rounded-lg align-middle" href="/images/<%= image.imageUrl %>">
                            <img class=" rounded-lg" src="/images/<%= image.imageUrl %>" alt="<%= image.description %>">
                        </a>
                    </div>
                <% } %>    
            </div>
        </div>
    </main>
<%- include('./include/end.ejs') %>
