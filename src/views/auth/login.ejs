<%- include('../include/head.ejs') %>

   <%- include('../include/nav.ejs') %>

    <main class="flex justify-center">
        <% if(errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        
        <form action="/admin/login" method="POST">
            <div class="bg-gray-800 rounded-lg p-4 border border-amber-500 h-auto flex flex-col gap-3 justify-between">
            <div>
                <label class="text-green-400 pr-4 " for="email">E-Mail</label>
                <input class="<%= validationErrors.find(e => e.path === 'title') ? 'invalid' :
                        'appearance-none bg-amber-100 float-right' %>"
                type="text" name="email" id="email" value="<%= oldInput.email %>">
            </div>
            <div>
                <label class="text-green-400 pr-4 "for="password">Password</label>
                <input class="<%= validationErrors.find(e => e.path === 'title') ? 'invalid' :
                        'appearance-none bg-amber-100 float-right' %>" type="password" name="password" id="password" value="<%= oldInput.password %>">
            </div>
            
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="text-teal-400 bg-gray-900 
                h-8 rounded-lg border border-gray-500 cursor-pointer" type="submit">Login</button>
            <div class="text-center text-teal-400 bg-gray-900 
                h-8 rounded-lg border border-gray-500 cursor-pointer">
            <a href='/reset'>Reset Password</a>
        </div>
        </div>
        </form>
        
        
    </main>
<%- include('../include/end.ejs') %>