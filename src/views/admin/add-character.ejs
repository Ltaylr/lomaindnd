<%- include('../include/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/character.css">
</head>

<body>
   <%- include('../include/nav.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="character-form" action="/admin/<% if (editing) { %>edit-character<% } else { %>add-character<% } %>" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="name">Name</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'title') ? 'invalid' : '' %>"
                    type="text" 
                    name="name" 
                    id="name" 
                    value="<% if (editing || hasError) { %><%= character.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="image">Image</label>
                <input class="image-input" type="file" name="image" id="image" >
            </div>
            <div class="form-control">
                <label for="pdfFile">Character Sheet</label>
                <input class="pdf-input" type="file" name="pdfFile" id="pdfFile" >
            </div>
            <div class="form-control">
                <label for="level">Level</label>
                <input class="level-input" type="number" min="1" name="levels" id="levels" max="20">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea 
                    class="<%= validationErrors.find(e => e.path === 'description') ? 'invalid' : '' %>"
                    name="description" 
                    id="description" 
                    rows="5"><% if (editing || hasError) { %><%= character.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= character._id %>" name="characterId">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update character<% } else { %>Add character<% } %></button>
        </form>
    </main>
<%- include('../include/end.ejs') %>